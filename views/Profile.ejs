<%- include("layouts/Profile",{user:user}) -%>

<body>
  <div class="profile-container">
    <div class="profile">
      <% if( user._doc.photo ) {%>
      <img
        class="profile-pic"
        src="<%=user._doc.photo%>"
        alt="<%= user.username %>"
      />
      <div><%= user.username %></div>
      <% } else { %>
      <div class="profile-pic">cc</div>
      <%}%>
      <div class="profile-info">
        <p><span>Name: </span><%= user.name %></p>
        <p><span>email: </span><%= user.email %></p>
        <p><span>Occupation: </span> <%= user.gender %></p>
        <p><span>Blogs: </span> <%=blogs.length%></p>
        <p>
          <span>Joined Date:</span> <%=
          Intl.DateTimeFormat('en-in').format(user.createdAt) %>
        </p>
      </div>
    </div>
    <div class="post-container">
      <h2>Posts</h2>

      <% if(!blogs.length) { %>
      <h2 style="text-align: center; margin: 20px; color: #0a0303">
        No posts Yet!
      </h2>
      <% } else {%>

      <div class="card-container">
        <% blogs.forEach(function(blog) { %> <%-
        include('BlogCard',{blog:blog})-%> <% }) %>
      </div>

      <% } %>
    </div>
  </div>
</body>
