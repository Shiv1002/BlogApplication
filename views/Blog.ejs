<%- include('layouts/root') -%>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= blog.title %>
    </title>



    <style>
      :root {
        font-family: "Poppins", sans-serif;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .container {
        display: flex;
        flex-direction: column;
        width: 700px;
        margin: auto;
        overflow: hidden;
        padding: 20px;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
      }

      .landing_image {
        padding: 0.5rem 0;
        height: 60dvh;
        width: 100%;
        box-sizing: border-box;
      }

      .user-actions {
        display: flex;
        align-items: center;
      }

      .update-blog-span {
        margin-left: auto;
      }

      .update-blog-span button {
        background-color: #ca0000c4;
        border-radius: 1rem;
        border: none;
        padding: 0.6rem 1rem;
      }

      .update-blog-span button a {
        font-family: inherit;
        text-decoration: none;
        color: whitesmoke;
        font-size: larger;
        padding: inherit;

      }

      h1 {
        color: #333;
        border-bottom: 2px solid #eaeaea;
        margin: 10px 0;
        padding-bottom: 10px;
      }

      .content {
        margin: 20px 0;
        line-height: 1.6;
        border-top: 2px solid #eaeaea;
      }

      .author {
        font-size: 0.9em;
        color: #777;
        font-size: large;
        margin-bottom: 10px;
      }

      .backbtn a {
        font-family: "Poppins", sans-serif;
        text-decoration: none;
        font-size: larger;
        padding: 0.6rem;
      }

      .user-actions * {
        padding: 3px;
      }

      pre {
        text-wrap: wrap;
        overflow-y: auto;
        padding: 10px;
        text-align: justify;
        font-family: "Poppins", sans-serif;
      }

      @media (width<=900px) {
        .container {
          width: 70%;
        }
      }

      a {
        color: #777;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      @media (width<=500px) {
        .container {
          width: 80%;
        }
      }

      @media (width<=400px) {
        .container {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="backbtn">
        <a href="/">
          < Back</a>
      </div>

      <img class="landing_image" src="<%=blog.image_url%>" alt="<%= blog.title %>" />
      <h1>
        <%= blog.title %>
      </h1>
      <div class="pub-detail">
        <div class="author">
          <span>
            by:
            <strong>
              <a href="/users/profile/<%=blog.author_id%>">
                <%= blog.author %>
              </a>
              &middot; <%= blog.publication_date %>
            </strong>
          </span>
        </div>

        <div class="user-actions">
          <span class="likes"> üëç <%=blog.likes%></span>
          <span class="dislikes"> üëé <%=blog.dislikes%></span>
          <span class="views">
            üëÄ<span id="blog-view">
              <%=blog.views%>
            </span>
          </span>
          <%if(isBlogOwner){%>
            <span class="update-blog-span">
              <button>
                <a href="updateblog/<%=blog._id%>">Update</a>
              </button>
            </span>
            <%}%>

        </div>
      </div>
      <div class="content">
        <pre><%= blog.contents %></pre>
      </div>
    </div>
    <script>
      // increase blog page view
      document.addEventListener("DOMContentLoaded", () => {
        let idOfBlog = location.pathname.split("/").pop();

        let timer = setTimeout(() => {
          fetch(`/blogs/updateblogview/${idOfBlog}`).then((rs) => {
            if (rs.ok) {
              console.log("blog view increased");
              document.getElementById("blog-view").innerHTML =
                Number(document.getElementById("blog-view").innerHTML) + 1;
            } else {
              console.log("failed to update");
            }
          });
        }, 5000);
      });
    </script>
  </body>

  </html>
  <!-- props are blog object -->